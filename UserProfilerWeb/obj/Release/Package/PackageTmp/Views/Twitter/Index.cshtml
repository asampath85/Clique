
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>User</h2>


<div class="row-fluid">


    
        <div class="input-group input-group-lg">
            <span class="input-group-addon" id="sizing-addon1">@@</span>
            <input type="text" class="form-control" placeholder="Name" aria-describedby="sizing-addon1" data-bind="value: name">
        </div>

        <div class="input-group input-group-lg">
            <span class="input-group-addon" id="sizing-addon1">@@</span>
            <input type="text" class="form-control" placeholder="Username" aria-describedby="sizing-addon1" data-bind="value: userName">
        </div>

        <button type="button" class="btn-lg btn-primary center-block" data-bind="click: add">Add</button>

    </div>
<div class="row-fluid">
    <div class="col-xs-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>User Name</th>
                    <th>Image URL</th>
                    <th style="width: 100px; text-align:right;" />
                </tr>
            </thead>
            <tbody data-bind=" template:{name:templateToUse, foreach: userList }"></tbody>
        </table>
        </div>

    </div>


    @section scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                var twitterModel = new TwitterViewModel();
                ko.applyBindings(twitterModel);

            });
        </script>
        <script id="itemsTmpl" type="text/html">
            <tr>
                <td data-bind="text: Id"></td>
                <td data-bind="text: Name"></td>
                <td data-bind="text: UserName"></td>
                <td data-bind="text: ImageURL"></td>
                <td class="buttons">
                    <a class="btn" data-bind="click: $root.edit" href="#" title="edit">edit</a>
                    <a class="btn" data-bind="click: $root.disable" href="#" title="disable">disable</a>
                </td>
            </tr>
        </script>

        <script id="editTmpl" type="text/html">
            <tr>
                <td><input data-bind="value: id" /></td>
                <td><input data-bind="value: name" /></td>
                <td class="buttons">
                    <a class="btn btn-success" data-bind="click: $root.save" href="#" title="save">save</a>
                    <a class="btn" data-bind="click: $root.cancel" href="#" title="cancel">cancel</a>
                </td>
            </tr>
        </script>


    }

