@{
    ViewBag.Title = "Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="page-header">

        <h2 style="color: #4099ff">Twitter Analyzer </h2> 

    </div>
</div>

<div class="row-fluid">
    <form class="form-horizontal" role="form">
      
        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label" for="inpMobile">Owner Mobile No</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inpMobile" data-bind="value: model().mobileNo">
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">Owner Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess" data-bind="value: model().userName">
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">Email</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess" data-bind="value: model().emailId">
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">UserName</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess" data-bind="value: model().twitterUserName">
                </div>
            </div>
         </div>

        <div class="form-group col-sm-12">
            <label class="col-sm-2 control-label" for="inpMobile">Location PinCode</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="inpMobile" data-bind="value: model().pinCode">
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">City</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess" data-bind="value: model().city">
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">State</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess">
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="inputSuccess">Country</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess">
                </div>
            </div>
        </div>


            <div class="form-group col-sm-12">
                <label class="col-sm-2 control-label" for="inputSuccess">Building Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputSuccess" data-bind="value: model().buildingName">
                </div>
            </div>

            <div class="form-group col-lg-12 has-error has-feedback">
                <label class="col-lg-2 control-label" for="inputError">Address</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="inputError" data-bind="value: model().address">
                </div>
            </div>

            <div class="form-group col-sm-12 has-error has-feedback">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label" for="inputError">From Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="inputError" data-bind="value: model().fromDate">
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label" for="inputError">To Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="inputError" data-bind="value: model().toDate">
                    </div>
                    </div>

                </div>


        <div class="col-xs-12">

            <button type="button" class="btn-lg btn-primary" data-bind="click: add">Submit</button>
            
            </div>

</form>
</div>


@section scripts{
    <script type="text/javascript">
    
        $(document).ready(function () {
            var viewModel = new RequestViewModel();
            ko.applyBindings(viewModel);

        });
    </script>
}

