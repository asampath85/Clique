<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>
<script src="~/Scripts/Highcharts-4.0.1/js/highcharts-3d.js"></script>

@model UserProfilerWeb.Models.TimeLineModel
@{
    ViewBag.Title = "3D Column";
}


            <div class="panel-body">
                <div class="col-md-12 text-center">
                    <div class="row">
                        <div class="col-lg-6 col-sm-6">
                            <label for="InputName">Tweet Score</label>
                            <div class="input-group">
                                <button id="singlebutton" name="singlebutton" class="btn btn-primary">@Model.TweetScore</button>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <label for="InputName">Weather Score</label>
                            <div class="input-group">
                                <button id="singlebutton"  name="singlebutton" class="btn btn-primary" >@Model.WeatherScore</button>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6">
                            <label for="InputName">Crime Score</label>
                            <div class="input-group">
                                <button id="singlebutton" name="singlebutton" class="btn btn-primary">@Model.CrimeScore</button>
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6">
                            <label for="InputName">User Feedback</label>
                            <div class="input-group">
                                <button id="singlebutton" name="singlebutton" class="btn btn-primary">@Model.UserScore</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-11">
                        <div style="max-width: 700px; margin: 0 auto;">
                            @(Model.chart)
                            <div id="sliders">
                                <table>
                                    <tr>
                                        <td>Alpha Angle</td>
                                        <td>
                                            <input id="R0" type="range" min="0" max="45" value="15" />
                                            <span id="R0-value" class="value"></span></td>
                                    </tr>
                                    <tr>
                                        <td>Beta Angle</td>
                                        <td>
                                            <input id="R1" type="range" min="0" max="45" value="15" />
                                            <span id="R1-value" class="value"></span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>



            </div>





<script type="text/javascript">
    // Activate the sliders
    $('#R0').on('change', function () {
        chart.options.chart.options3d.alpha = this.value;
        showValues();
        chart.redraw(false);
    });
    $('#R1').on('change', function () {
        chart.options.chart.options3d.beta = this.value;
        showValues();
        chart.redraw(false);
    });

    function showValues() {
        $('#R0-value').html(chart.options.chart.options3d.alpha);
        $('#R1-value').html(chart.options.chart.options3d.beta);
    }
    showValues();
</script>
