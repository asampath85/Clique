<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>
<script src="~/Scripts/Highcharts-4.0.1/js/highcharts-3d.js"></script>

<h1>
    TimeLine Graph
</h1>
<div class="right_b">
    <span>Graphical representation of data based on Time Line. </span>
    <br />
    <br />
</div>


<div class="panel with-nav-tabs panel-default">
    <div class="panel-heading">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#timelineTab" data-toggle="tab">Timeline</a></li>
            <li><a href="#detailsTab" data-toggle="tab">Details</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div class="tab-pane fade in active" id="timelineTab">
                @*<div class="panel-body">*@
                @*<div class="col-md-12 text-center">*@
                <div class="row">
                    <div class="col-md-2 col-sm-2"></div>
                    <div class="col-md-2 col-sm-2">
                        <label for="InputName">Tweet Score</label>
                        <button id="singlebutton" name="singlebutton" class="btn btn-success btn-xs">@Model.TweetScore</button>

                    </div>
                    <div class="col-md-2 col-sm-2">
                        <label for="InputName">Weather Score</label>
                        <button id="singlebutton" name="singlebutton" class="btn btn-success btn-xs">@Model.WeatherScore</button>

                    </div>
                    <div class="col-md-2 col-sm-2">
                        <label for="InputName">Crime Score</label>
                        <button id="singlebutton" name="singlebutton" class="btn btn-success btn-xs">@Model.CrimeScore</button>

                    </div>
                    <div class="col-md-2 col-sm-2">
                        <label for="InputName">User Feedback</label>
                        <button id="singlebutton" name="singlebutton" class="btn btn-success btn-xs">@Model.UserScore</button>

                    </div>
                    <div class="col-md-2 col-sm-2"></div>
                </div>
                @*</div>*@
                <div class="row">
                    <div class="col-lg-12 col-sm-11">
                        <div style="max-width: 700px; margin: 0 auto;">
                            @(Model.chart)
                            <div id="sliders">
                                <table>
                                    <tr>
                                        <td>Alpha Angle</td>
                                        <td>
                                            <input id="R0" type="range" min="0" max="45" value="15" />
                                            <span id="R0-value" class="value"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Beta Angle</td>
                                        <td>
                                            <input id="R1" type="range" min="0" max="45" value="15" />
                                            <span id="R1-value" class="value"></span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @*</div>*@

            </div>
            <div class="tab-pane fade" id="detailsTab">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#collapse1" style="font-size: small; font-weight: bold;">Event List</a>
                                    </h4>
                                </div>
                                <div id="collapse1" class="panel-collapse collapse">

                                    <table id="eventsTable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Event Name</th>
                                                <th>Event Description</th>
                                                <th>Venue</th>
                                                <th>From Date</th>
                                                <th>To Date</th>
                                                <th>Score</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind=" foreach: eventList ">
                                            <tr>
                                                <td data-bind="text: Id"></td>
                                                <td data-bind="text: Name"></td>
                                                <td data-bind="text: Description"></td>
                                                <td data-bind="text: Venue"></td>
                                                <td data-bind="text: StartDate"></td>
                                                <td data-bind="text: EndDate"></td>
                                                <td data-bind="text: Score"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#collapse2" style="font-size: small; font-weight: bold;">Location Tweet List</a>
                                    </h4>
                                </div>
                                <div id="collapse2" class="panel-collapse collapse">
                                    <table id="locationTable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Tweet Text</th>
                                                <th>Profile URL</th>
                                                <th>Posted By</th>
                                                <th>Posted At</th>
                                                <th>Score</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind=" foreach: locationTweetList ">
                                            <tr>
                                                <td data-bind="text: Id"></td>
                                                <td data-bind="text: Text"></td>
                                                <td></td>
                                                <td data-bind="text: PostedBy"></td>
                                                <td></td>
                                                <td data-bind="text: Score"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#collapse3" style="font-size: small; font-weight: bold;">User Feedback</a>
                                    </h4>
                                </div>
                                <div id="collapse3" class="panel-collapse collapse">
                                    <table id="feedbackTable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Feedback Text</th>
                                                <th>User Name</th>
                                                <th>User Email By</th>
                                                <th>Score</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind=" foreach: userFeedbackList ">
                                            <tr>
                                                <td data-bind="text: Id"></td>
                                                <td data-bind="text: Text"></td>
                                                <td data-bind="text: UserName"></td>
                                                <td data-bind="text: UserEmail"></td>
                                                <td data-bind="text: Score"></td>
                                                <td data-bind="text: AddedAt"></td>
                                            </tr>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>







<script type="text/javascript">
   
    

    var requestId = @ViewBag.RequestId;
    $(document).ready(function () {

        // Activate the sliders
        $('#R0').on('change', function () {
            chart.options.chart.options3d.alpha = this.value;
            showValues();
            chart.redraw(false);
        });
        $('#R1').on('change', function () {
            chart.options.chart.options3d.beta = this.value;
            showValues();
            chart.redraw(false);
        });

        function showValues() {
            debugger;
            $('#R0-value').html(chart.options.chart.options3d.alpha);
            $('#R1-value').html(chart.options.chart.options3d.beta);
        }

        showValues();
        var viewModel = new DetailsViewModel();
        ko.applyBindings(viewModel);

    });

</script>
